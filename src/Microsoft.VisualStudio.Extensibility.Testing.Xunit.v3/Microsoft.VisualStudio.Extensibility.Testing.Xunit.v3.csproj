<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <RootNamespace>Xunit</RootNamespace>
    <IsXUnit3>true</IsXUnit3>
    <DefineConstants>$(DefineConstants);MERGED_PIA;USES_XUNIT_3</DefineConstants>

    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="System.Runtime.Remoting" />
    <Reference Include="PresentationFramework" />
    <Reference Include="WindowsBase" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.VisualStudio.SDK" Version="17.0.0-previews-3-31605-261" PrivateAssets="all" />
    <PackageReference Include="Microsoft.VisualStudio.Setup.Configuration.Interop" Version="1.16.30" PrivateAssets="compile" />
    <PackageReference Include="Microsoft.Windows.CsWin32" Version="0.1.619-beta" PrivateAssets="all" />
    <!--
      A Newtonsoft.Json package reference with insecure defaults is inherited, but not needed by this project.
      Override the reference to a secure version, but exclude it from the build and packaging.
    -->
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" ExcludeAssets="all" PrivateAssets="all" />
    <PackageReference Include="xunit.v3.assert" Version="1.1.0" />
    <PackageReference Include="xunit.v3.extensibility.core" Version="1.1.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Microsoft.VisualStudio.IntegrationTestService.Dev17\Microsoft.VisualStudio.IntegrationTestService.Dev17.csproj" Private="false" PrivateAssets="all" />

    <ProjectReference Include="..\Microsoft.VisualStudio.VsixInstaller.17\Microsoft.VisualStudio.VsixInstaller.17.csproj" ReferenceOutputAssembly="False" SkipGetTargetFrameworkProperties="true" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <!-- Embedded assemblies -->
    <EmbeddedResource Include="$(RepoRootPath)bin\Microsoft.VisualStudio.VsixInstaller.17\x64\$(Configuration)\net472\Microsoft.VisualStudio.VsixInstaller.17.exe" Visible="false" ManifestResourceName="Microsoft.VisualStudio.VsixInstaller.17.exe" />
    <EmbeddedResource Include="$(RepoRootPath)bin\Microsoft.VisualStudio.IntegrationTestService.Dev17\$(Configuration)\net472\Microsoft.VisualStudio.IntegrationTestService.dll" Visible="false" ManifestResourceName="Microsoft.VisualStudio.IntegrationTestService.dll" />

    <!-- Embedded extensions -->
    <EmbeddedResource Include="$(RepoRootPath)bin\Microsoft.VisualStudio.IntegrationTestService.Dev17\$(Configuration)\net472\Microsoft.VisualStudio.IntegrationTestService.vsix" Visible="false" ManifestResourceName="Microsoft.VisualStudio.IntegrationTestService.vsix" />
  </ItemGroup>

  <Import Project="..\Microsoft.VisualStudio.Extensibility.Testing.Xunit.Shared\Microsoft.VisualStudio.Extensibility.Testing.Xunit.Shared.projitems" Label="Shared" />

  <ItemGroup>
    <Content Include="$(MSBuildThisFileDirectory)build\Microsoft.VisualStudio.Extensibility.Testing.Xunit.v3.props" PackagePath="build" />
    <Content Include="$(MSBuildThisFileDirectory)build\Microsoft.VisualStudio.Extensibility.Testing.Xunit.v3.targets" PackagePath="build" />
  </ItemGroup>
</Project>
